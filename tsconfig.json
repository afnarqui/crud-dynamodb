{
    "compilerOptions": {
      "target": "ES2019",
      "module": "commonjs",
      "declaration": true,
      "outDir": "./lib",
      "strict": true,
      "baseUrl": "./",
      "types": [
        "node",
        "jest"
      ],
      "esModuleInterop": true,
      "inlineSourceMap": true,
      "resolveJsonModule": true,
      "allowJs": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "lib": [
        "ES2020"
      ]
    }
  }
  
